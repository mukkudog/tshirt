// C++ program to calculate
// area of a trapezoid
#include<bits/stdc++.h>
using namespace std;

// Function for the area
double Area(int b1, int b2,
					int h)
{
	return ((b1 + b2) / 2) * h;
}

// Driver Code
int main()
{
	int base1 = 8, base2 = 10,
				height = 6;
	double area = Area(base1, base2,
							height);
	cout << "Area is: " << area;
	return 0;
}

